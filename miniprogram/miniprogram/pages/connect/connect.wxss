.container {
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.chat-history {
    height: 850rpx;
    width: 700rpx;
    overflow-y: scroll;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    display: flex;
    flex-direction: column;
}

.message {
    margin: 10px;
    padding: 10px;
    border-radius: 10px;
    word-wrap: break-word; /* 允许单词内换行 */
    word-break: break-all; /* 强制换行 */
    max-width: 500rpx; /* 最大宽度设置，防止消息过宽 */
}

.self {
    background-color: #07c160;
    color: white;
    align-self: flex-end;
}

.other {
    background-color: #e0e0e0;
    align-self: flex-start;
}

.input-area {

    margin-top: 40rpx;
    width: 100%; /* 让输入区域占满父容器宽度 */
}

.input-area textarea {
    position: relative;
    left:-15rpx;
    border: black 1px solid;
    height: 200rpx;
    width: 700rpx;
}

.input-area button {
    position: relative;
    top:20rpx;
    left: 180rpx;
    width: 20rpx;
    height: 40px;
    border: none;
    background-color: #1aad19;
    color: white;
    border-radius: 0 5px 5px 0;
}