.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;

}

.main-picture-box{
  width: 100%;

}

.main-picture{
  width: 100%;
}

.user-info{
  position: relative; /* 相对定位，相对父元素 */
  border: 2px solid black;
  top: -140rpx;
  left: 15%; /* 向右移动30px */
  width: 70%;
  height: 180rpx;
  background-color: #3b7d23;
  border-radius:50rpx;
}

.user-avatar{
  position: relative;
  top: 5%;
  left:3%;
  border: 2px solid black;
  width: 155rpx;
  height:155rpx;
}

.avatar-picture{
  width: 100%;
  height: 100%;
}

.user-name{
  position: relative;
  top: -80%;
  left:36%;
  font-size:40rpx;
}

.user-class{
  position: relative;
  top: -80%;
  left:36%;

}

.user-class-text{
  font-size:30rpx;
}

.bottom{
  position: relative;
  background-color: #3b7d23;
  left:-118rpx;
  top:-20%;
  width: 760rpx;
  height: 800rpx;
  border-radius:100rpx;
}

.mid-bar{
  position: relative;
  top:-7%;
  display: flex;
  justify-content: space-around; /* 水平排列图片 */
  height: 200rpx;

}

.mid-bar-button{
  position: relative;
  right:10rpx;
  width: 200rpx;
  height:200rpx;
}

.announcement{
  position: relative;
  top: 30rpx;
  left: 25rpx;
  width: 700rpx;
  height: 400rpx;
  border: 2px solid black;
}

.announcement-title{
  display: flex; /* 使用 Flexbox 布局 */
  justify-content: center; /* 水平居中 */
  font-size:50rpx;

}
.announcement-text{
  font-size:40rpx;
  text-indent: 40rpx;
}
